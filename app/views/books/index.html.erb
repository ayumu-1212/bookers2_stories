<div class="row">
  <% if @new_book.errors.any? %>
      <div class="error-messages">
        <h3 class="error-message-title"><%= @new_book.errors.count %> error prohibited this obj from being saved:</h3>
        <% @new_book.errors.full_messages.each do |message| %>
          <li class="error-message-content"><%= message %></li>
        <% end %>
      </div>
    <% end %>
  <%= render "layouts/sidebar" %>
  <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= attachment_image_tag book.user, :profile_image, fallback: "no_image.jpg", size:'40x40', class: "mainbar-profile-image" %><br>
              <%= link_to book.user.name, user_path(book.user) %>
            </td>
            <td>
              <%= link_to book.title, book_path(book.id) %>
            </td>
            <td>
              <% if book.favorites.find_by(user_id: current_user.id).present? %>
                <%= link_to book_favorites_path(book_id: book.id), method: :delete do %>
                  <i class="fas fa-heart" style="red"></i> <%= book.favorites.count %>
                <% end %>
              <% else %>
                <%= link_to book_favorites_path(book_id: book.id), method: :post do %>
                  <i class="far fa-heart"></i> <%= book.favorites.count %>
                <% end %>
              <% end %>
            </td>
            <td>
              <%= book.body %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>