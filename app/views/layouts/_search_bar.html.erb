<div class="row d-flex flex-row-reverse">
  <%= form_with url: searches_result_path, method: :get, local: true do |f| %>
    <%= f.text_field :keyword %>
    <%= f.select :model_name, ["Book", "User"] %>
    <%= f.select :search_style, {"完全一致": "perfect","前方一致": "forward","後方一致": "backward","部分一致": "partial"} %>
    <%= f.submit "検索" %>
  <% end %>
</div>
