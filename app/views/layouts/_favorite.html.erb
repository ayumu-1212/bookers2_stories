<% if book.favorites.find_by(user_id: current_user.id).present? %>
  <%= link_to book_favorites_path(book_id: book.id), method: :delete, remote: true do %>
    <i class="fas fa-heart" style="red"></i> <%= book.favorites.count %>
  <% end %>
<% else %>
  <%= link_to book_favorites_path(book_id: book.id), method: :post, remote: true do %>
    <i class="far fa-heart"></i> <%= book.favorites.count %>
  <% end %>
<% end %>