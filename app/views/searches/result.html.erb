<%= render "layouts/search_bar" %>
<div class="row">
  <h2><%= params[:model_name] + ' search for "' + params[:keyword] + '"' %></h2>
  <% if params[:model_name] == "Book" %>
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= attachment_image_tag book.user, :profile_image, fallback: "no_image.jpg", size:'40x40', class: "mainbar-profile-image" %><br>
              <%= link_to book.user.name, user_path(book.user) %>
            </td>
            <td>
              <%= link_to book.title, book_path(book.id) %>
            </td>
            <td>
              <%= book.body %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% elsif params[:model_name] == "User" %>
    <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", size:'40x40', class: "mainbar-profile-image" %>
            </td>
            <td>
              <%= user.name %>
            </td>
            <td>
              <%= link_to "Show",user_path(user.id) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>